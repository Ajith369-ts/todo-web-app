<%- include("header"); -%>
<body>
    <div class="box" id="heading">
        <h1> <%= listTitle %> </h1>
    </div>

    <div class="box">

        <% addList.forEach(function(element){ %>
            <form action="/delete" method="POST">
                <div class="item">
                    <input type="checkbox" name="checkBox" value="<%= element._id %>" onchange="this.form.submit()">
                    <p><%= element.name %></p>
                </div>
                <input type="hidden" name="listName" value="<%= listTitle %>">
            </form>
        <% }); %>    
        
        <form class="newItem" action="/" method="POST">
            <input type="text" name="newItem" placeholder="Add work" autocomplete="off">
            <button type="submit" name="list" value="<%=listTitle%>">+</button>
        </form>

    </div>

</body>
</html>